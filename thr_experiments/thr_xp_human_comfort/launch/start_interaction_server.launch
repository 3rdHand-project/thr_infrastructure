<?xml version="1.0"?>
<launch>
	<arg name="new_user" default="True"/>
    <arg name="scene" default="shapeo"/>
    <arg name="use_kinect" default="False"/>

    <include file="$(find thr_interaction_controller)/launch/manual.launch" >
    	<arg name="scene" value="$(arg scene)"/>
    	<arg name="load_optitrack_config" value="False"/>
        <arg name="display" value="action"/>
    </include>

    <include file="$(find human_moveit_config)/launch/human_tracker.launch">
    	<arg name="use_kinect" value="$(arg use_kinect)"/>
    </include>

    <node name="vrep_frames_publisher" pkg="vrep_ik_bridge" type="vrep_frames_publisher" output="screen" required="True"/>

    <node pkg="tf" type="static_transform_publisher" name="shapeo_broadcaster" args="0.27 0.008 0.066 0.708 0.626 -0.050 -0.323 /right_gripper /shapeo 100" />

    <node name="get_carry_pose_srv" pkg="reba_optim" type="get_carry_pose_srv" output="screen" required="True"/>
</launch>